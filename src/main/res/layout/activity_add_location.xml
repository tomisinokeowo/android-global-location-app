<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Container for the form elements -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Row for Location Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- TextView for the Location Name label -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/location_name"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:gravity="center_vertical" />

            <!-- EditText for entering the Location Name -->
            <EditText
                android:id="@+id/et_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:minHeight="48dp"
                android:hint="@string/enter_location_name"
                android:padding="8dp"
                android:background="@drawable/edit_text_background"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Row for Country -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- TextView for the Country label -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/country"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:gravity="center_vertical" />

            <!-- EditText for entering the Country -->
            <EditText
                android:id="@+id/et_country"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:minHeight="48dp"
                android:hint="@string/enter_country"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Row for GPS Coordinates -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- TextView for the GPS Coordinates label -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/gps_coordinates"
                android:textSize="16sp"
                android:gravity="center_vertical" />

            <!-- EditText for entering the GPS Coordinates -->
            <EditText
                android:id="@+id/et_gps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/edit_text_background"
                android:hint="@string/enter_gps_coordinates"
                android:padding="8dp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <!-- Row for Date Visited -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- TextView for the Date Visited label -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/date_visited"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:gravity="center_vertical" />

            <!-- EditText for entering the Date Visited -->
            <EditText
                android:id="@+id/et_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="@string/dd_mm_yyyy"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Row for Rating -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- TextView for the Rating label -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/rating"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:gravity="center_vertical" />

            <!-- EditText for entering the Rating -->
            <EditText
                android:id="@+id/et_rating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:minHeight="48dp"
                android:hint="@string/enter_rating_1_10"
                android:padding="8dp"
                android:background="@drawable/edit_text_background"
                android:inputType="number"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Button for fetching GPS coordinates -->
        <Button
            android:id="@+id/btn_get_current_gps_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/get_current_gps"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium" />

        <!-- Button for submitting the form -->
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/btn_submit"
            android:backgroundTint="@color/green"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>
</ScrollView>
